<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="edu.njpi.dc.mapper.DcMajorMapper">
    
    <resultMap type="DcMajor" id="DcMajorResult">
        <result property="id"    column="id"    />
        <result property="majorName"    column="major_name"    />
    </resultMap>

    <sql id="selectDcMajorVo">
        select id, major_name from dc_major
    </sql>

    <select id="selectDcMajorList" parameterType="DcMajor" resultMap="DcMajorResult">
        <include refid="selectDcMajorVo"/>
        <where>  
            <if test="majorName != null  and majorName != ''"> and major_name like concat('%', #{majorName}, '%')</if>
        </where>
    </select>
    
    <select id="selectDcMajorById" parameterType="Long" resultMap="DcMajorResult">
        <include refid="selectDcMajorVo"/>
        where id = #{id}
    </select>

    <insert id="insertDcMajor" parameterType="DcMajor">
        insert into dc_major
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="majorName != null and majorName != ''">major_name,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id},</if>
            <if test="majorName != null and majorName != ''">#{majorName},</if>
         </trim>
    </insert>

    <update id="updateDcMajor" parameterType="DcMajor">
        update dc_major
        <trim prefix="SET" suffixOverrides=",">
            <if test="majorName != null and majorName != ''">major_name = #{majorName},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteDcMajorById" parameterType="Long">
        delete from dc_major where id = #{id}
    </delete>

    <delete id="deleteDcMajorByIds" parameterType="String">
        delete from dc_major where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>
